/* pages/index/index.wxss */
/* 轮播图组件 */
.index_swiper {
  height: 300rpx;
}

.index_swiper image {
  width: 100%;
  height: 100%;
}

/* 首页导航 */
.index_guide {
  display: flex;
}
.guide_item {
  width: 25%;
  display: flex;
  align-items: center;
  flex-direction: column;
  text-align: center;
  font-size: 26rpx;
}
.guide_item .iconfont {
  display: block;
  width: 100rpx;
  height: 100rpx;
  background-color: #d43c33;
  line-height: 100rpx;
  font-size: 50rpx;
  color: white;
  border-radius: 50%;
  margin: 20rpx 0;
}
/* 推荐列表 */
.index_ranking_list {
  padding: 20rpx;
  overflow: hidden;
}

/* 排行榜滚动区域 */
.scroll_recommend_list {
  display: flex;
  height: 300rpx;
  margin-top: 10rpx;
}

.scroll_recommend_list view image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}
.scroll_recommend_list view {
  width: 200rpx;
  margin-right: 20rpx;
}
.scroll_recommend_list view > text {
  font-size: 26rpx;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

/* 排行榜 */
.ranking_container {
  padding: 20rpx;
}

/* swiper */

.ranking_swiper{
  height: 400rpx;
}

/* 排行榜的item */

.ranking{
background-color: #fbfbfb;
width: 97%;
}

.ranking .title{
  line-height: 60rpx;
}

.ranking > .ranking-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.ranking > .ranking-item image,
.ranking > .ranking-item text:first-child {
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
}
.ranking > .ranking-item .ord{
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
}
