/* pages/video/video.wxss */
/* 视频页头部信息 */
.Videohead {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 10rpx;
}
.Videohead image {
  width: 60rpx;
  height: 60rpx;
}
.Videohead .searchMuise {
  flex: 1;
  text-align: center;
  line-height: 60rpx;
  color: #d43c33;
  font-size: 28rpx;
  border: 1rpx #eee solid;
  margin: 0 20rpx;
}

.NavGuide {
  display: flex;
  height: 60rpx;
  font-size: 32rpx;
}

.guide_item {
  padding: 0 30rpx;
  flex: none;
  line-height: 60rpx;
}

.guide_item > view {
  height: 60rpx;
  box-sizing: border-box; /* 必须设置高度这个属性才生效 */
}
.guide_item view.active {
  border-bottom: 4rpx #d43c33 solid;
}

/* 视频 */

.video-item {
  padding: 20rpx;
}

.video-item .common{
  width: 100%;
  height: 360rpx;
  border-radius: 10rpx;
}

/* 视频底部 */

.videoItem .content {
  font-size: 26rpx;
  height:80rpx;
  line-height: 80rpx;
  max-width: 500rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

/* footer */
.footer {
  border-top: 1rpx solid #eee;
  padding: 20rpx 0;
}
.footer .avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  vertical-align: middle;
}

.footer  .nickName {
  font-size: 26rpx;
  vertical-align: middle;
  margin-left: 20rpx;
}

.footer .comments_praised {
  float: right;
}

.comments_praised .btn {
  display: inline;
  padding: 0;
  background-color: transparent;
  border-color: transparent;
}

.comments_praised .btn:after {
  border: none;
}

.comments_praised .item {
  margin-left: 50rpx;
  position: relative;
}

.comments_praised .item .count {
  position: absolute;
  top: -20rpx;
  font-size: 20rpx;
}
