/* pages/recommendSong/recommendSong.wxss */

page{
  height: 100%;
  overflow: hidden;
}
/* 导航头部 */
.todayRecommend .header{
position: relative;
height: 300rpx;
width: 100%;
}

.todayRecommend .header image{
  width: 100%;
  height: 100%;
}

.header .time{
position: absolute;
top: 50%;
left: 50%;
transform: translate(-50%,-50%);
color: #fff;
}

.time .day{
  font-size: 38rpx;
}

/* 歌曲列表容器 */
.songs_Container{
  position: relative;
  top: -20rpx;
  border-radius: 20rpx;
  padding: 20rpx;
  background-color: white;
}

.songs_Container .song_head{
  height: 80rpx;
  line-height: 80rpx;
}

.songs_Container .song_head text:last-child{
  float: right;
}

/* 歌曲滚动容器 */
.song_scroll_container{
 height: calc(100vh - 380rpx);
}

.song_scroll_container .song-item{
  width: 100%;
  height: 80rpx;
  display: flex;
  margin-bottom: 20rpx;
}
.song_scroll_container .song-item image{
  height: 80rpx;
  width: 80rpx;
  border-radius: 10rpx;
}

.song_info{
  position: relative;
  display: flex;
  flex-direction: column;justify-content: space-between;
  margin-left: 20rpx;
  font-size: 28rpx;
}

.song_info text{
  height: 40%;
}

.iconfont{
 position: absolute;
 width: 80rpx;height: 80rpx;
 right: 0;
 text-align: center;
 line-height: 80rpx;
 font-size: 38rpx;
}